<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PopupAlphaAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_alphain</item>
        <item name="android:windowExitAnimation">@anim/dialog_alphaout</item>
    </style>

    <!-- 时间选择器popwidnow 显示消失动画 -->
    <style name="timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/timepicker_anim_enter_bottom
        </item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/timepicker_anim_exit_bottom
        </item> <!-- 指定消失的动画xml -->
    </style>

</resources>
